                 {:description "us-east-2"
                  :value "us-east-2"
                  :text "us-east-2"}
                 {:description "us-west-1"
                  :value "us-west-1"
                  :text "us-west-1"}
                 {:description "us-west-2"
                  :value "us-west-2"
                  :text "us-west-2"}
                 {:description "ca-central-1"
                  :value "ca-central-1"
                  :text "ca-central-1"}
